    <script>
        (function() {
            const p = ['contextmenu', 'keydown', 'selectstart'];
            p.forEach(e => {
                document.addEventListener(e, function(ev) {
                    if (e === 'contextmenu') {
                        ev.preventDefault();
                        return false;
                    }
                    if (e === 'keydown' && (ev.ctrlKey && (ev.keyCode === 85 || ev.keyCode === 83 || ev.keyCode === 67 || ev.key === 'u' || ev.key === 's' || ev.key === 'c')) || ev.keyCode === 123) {
                        ev.preventDefault();
                        return false;
                    }
                });
            });
        })();

        function calc() {
            const l = parseFloat(document.getElementById('length').value);
            const h = parseFloat(document.getElementById('height').value);
            const t = document.querySelector('input[name="thickness"]:checked').value;

            if (!l || !h || l <= 0 || h <= 0) {
                alert('‡¶¶‡¶Ø‡¶º‡¶æ ‡¶ï‡¶∞‡ßá ‡¶∏‡¶†‡¶ø‡¶ï ‡¶Æ‡¶æ‡¶® ‡¶≤‡¶ø‡¶ñ‡ßÅ‡¶®!');
                return;
            }

            const tInch = parseFloat(t);
            const tFt = tInch / 12;
            
            const wVol = l * h * tFt;
            
            const dryMortar = wVol * 0.35;
            
            const cmt = ((dryMortar * 1) / 5) * 0.8;
            const cmtBags = cmt.toFixed(2);
            
            const snd = (dryMortar * 4) / 5;
            
            const brkMult = tInch === 5 ? 4.8 : 9.8;
            const brks = Math.ceil(l * h * brkMult);

            document.getElementById('r-length').textContent = l.toFixed(2) + ' ‡¶´‡ßÅ‡¶ü';
            document.getElementById('r-height').textContent = h.toFixed(2) + ' ‡¶´‡ßÅ‡¶ü';
            document.getElementById('r-thickness').textContent = tInch + ' ‡¶á‡¶û‡ßç‡¶ö‡¶ø';
            document.getElementById('r-bricks').textContent = brks + ' ‡¶ü‡¶ø';
            document.getElementById('r-cement').textContent = cmtBags + ' ‡¶¨‡ßç‡¶Ø‡¶æ‡¶ó';
            document.getElementById('r-sand').textContent = snd.toFixed(2) + ' ‡¶ò‡¶®‡¶´‡ßÅ‡¶ü';

            document.getElementById('results').classList.add('show');
        }

        function rst() {
            document.getElementById('length').value = '';
            document.getElementById('height').value = '';
            document.querySelector('input[name="thickness"][value="5"]').checked = true;
            document.getElementById('results').classList.remove('show');
        }

        function dwnld() {
            window.print();
        }
    </script>
